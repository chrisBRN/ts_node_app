{
    "name": "node_app",
    "version": "0.1.0",
    "description": "",
    "main": "app.js",
    "author": "chrisBRN",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV=development nodemon",
        "build": "rm -rf ./dist && rm -rf ./reports && tsc",
        "start": "NODE_ENV=production yarn build && node dist/app.js",
        "test": "NODE_ENV=test jest --detectOpenHandles",
        "test-report": "yarn run test --coverage",
        "lint": "eslint . --ext .ts",
        "lint+": "eslint . --ext .ts --fix",
        "check-all": "yarn build && yarn test-report && yarn lint",
        "check-all+": "yarn build && yarn test-report && yarn lint+"
    },
    "jest": {
        "coverageDirectory": "<rootDir>/reports/jest-coverage",
        "modulePathIgnorePatterns": [
            "<rootDir>/dist"
        ],
        "coverageReporters": [
            "text",
            "html"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node",
        "transformIgnorePatterns": [
            "node_modules/"
        ],
        "verbose": true
    },
    "devDependencies": {
        "@types/express": "^4.17.8",
        "@types/node": "^14.10.1",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.1.0",
        "@typescript-eslint/parser": "^4.1.0",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.4.2",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.1",
        "supertest": "^4.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "@types/cookie-parser": "^1.4.2",
        "@types/express-ws": "^3.0.0",
        "@types/jest": "^26.0.14",
        "@types/nconf": "^0.10.0",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.3",
        "express": "^4.17.1",
        "express-router": "^0.0.1",
        "express-ws": "^4.0.0",
        "http-status-codes": "^2.1.3",
        "log4js": "^6.3.0",
        "nconf": "^0.10.0",
        "ts-jest": "^26.4.0"
    }
}
